html
  head
    title= "polls"
    script
        include ../scripts/scripts.js 
  body
    h1= pollingUnit
    br
    br
    select(name="polls" id="select"  )
        each val in options   
            option(value=val selected=val==pollingUnit)=val
                a(href="/units?unit="+val)

    br
    table
        tr 
            th="Political Party"
            th="Score"
        each vl in results
            tr 
            td=vl.party_abbreviation
            td=vl.party_score
        tr 
            td="Total"
            td=total
    br
    br
    br
    ul 
        li
            a(href="/lgas")="view by LGAs" 
        li
            a(href="/")="Home"
        

